{
  "name": "jira-automation-assistant",
  "version": "1.0.0",
  "description": "Desktop app for automating Jira tasks through UI simulation - no API needed",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run start:electron\"",
    "watch:ts": "tsc --watch",
    "start:electron": "wait-on dist/main/main.js && electron .",
    "build": "tsc",
    "package": "npm run build && npx electron-packager . \"Jira Automation Assistant\" --platform=win32 --arch=x64 --out=release --overwrite --icon=assets/icon.ico && node scripts/copy-packaged-exe.js",
    "package:fallback": "node scripts/create-portable-exe.js",
    "clean": "rimraf dist"
  },
  "keywords": [
    "jira",
    "automation",
    "electron",
    "rpa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "date-fns": "^3.0.0"
  },
  "build": {
    "appId": "com.yourcompany.jira-automation",
    "productName": "Jira Automation Assistant",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "certificateFile": null,
      "certificatePassword": null,
      "sign": null
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json"
    ]
  }
}
